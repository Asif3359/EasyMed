<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" fx:id="contentArea" prefHeight="417.0" prefWidth="918.0"
      stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.easymed.controllers.auth.ForgetPasswordChangePassController">
    <children>
        <Button layoutX="352.0" layoutY="196.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="41.0"
                prefWidth="215.0" style="-fx-background-color: #5e40d3;" styleClass="btn1" text="Change Password"/>
        <PasswordField fx:id="password" layoutX="322.0" layoutY="52.0" prefHeight="41.0" prefWidth="275.0"
                       promptText="New Password" style="-fx-background-color: #dae1e3;" styleClass="input"/>
        <PasswordField fx:id="confirmPassword" layoutX="322.0" layoutY="112.0" prefHeight="41.0" prefWidth="275.0"
                       promptText="Confirm Password" style="-fx-background-color: #dae1e3;" styleClass="input"/>
        <Label fx:id="warning" layoutX="366.0" layoutY="7.0" text="Password doesn't match." textFill="#ff1c1c">
            <font>
                <Font size="17.0"/>
            </font>
        </Label>
    </children>
</Pane>
